#include <iostream>
using namespace std; 

int main()
{
    //EJERCICIO 1
    for (int i = 0; i <= 9; i++)
    {
        cout << i << " , "; 
    }
    cout << endl; 
    for (int i = 9; i >= 0; i--)
    {
        cout << i << " , "; 
    }
    cout << endl; 

 //EJERCICIO 2
    for (int i = 0; i <= 99; i++)
    {
        cout << i << " , ";
    }
    cout << endl;
    for (int i = 99; i >= 0; i--)
    {
        cout << i << " , ";
    }
    cout << endl;

//EJERCICIO 3
   for (int i = 1; i <= 100; i++)
   {
       if (i % 2 == 0)
       {
           cout << i << " , ";
       }
   }
   cout << endl;
